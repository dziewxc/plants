{# src/Cloudy/Bundle/CrudBundle/Resources/views/Page/about.html.twig #}
{% extends 'CloudyCrudBundle::layout.html.twig' %}

{% block title %}About{% endblock%}

{% block body %}
    <header>
        <h1>About PlantsCalculator</h1>
    </header>
    <article>
        <p>Oh, it's just lovely page with a lot of good stuff.</p>
    </article>

    <form action="{{ path('CloudyCrudBundle_about') }}" method="post" {{ form_enctype(form) }} class="blogger">
        {{ form_errors(form) }}
        {{ form_row(form.duration) }}
        {{ form_row(form.text) }}
        {{ form_rest(form) }}

        <input type="submit" value="Submit" />
    </form>
{% endblock %}